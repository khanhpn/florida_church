<div>
  <div class="related-articles">Related articles</div>
  <div>
    <% relateds.each do |item| %>
      <div>
        <% if item.name_link.present? %>
          <%= link_to item.name, item.name_link, target: "_blank" %>
        <% end %>
      </div>
      <div>
        <% if item.file_image.present? %>
          <%= link_to item.file_image.filename.to_s, rails_blob_path(item.file_image, disposition: "download"), target: "_blank" %>
        <% end %>
      </div>
      <div>
        <% if item.file_pdf.present? %>
          <%= link_to item.file_pdf.filename.to_s, rails_blob_path(item.file_pdf, disposition: "download"), target: "_blank"  %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
