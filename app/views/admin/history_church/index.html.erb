<%= render "admin/shared/bread_crumb", name: {title: "History church", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage history church</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Content</th>
                  <th>Display</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @history_churchs.each do |history_church| %>
                  <tr>
                    <td><%= link_to history_church&.name, history_church&.name_link %></td>
                    <td><%= history_church&.content&.html_safe || "-"  %></td>
                    <td><%= history_church&.display || "-"  %></td>
                    <td><%= history_church&.created_at || "-"  %></td>
                    <td><%= history_church&.updated_at || "-"  %></td>
                    <td>
                      <% unless history_church.blank? %>
                        <%= link_to "Edit", edit_admin_history_church_path(history_church), class: "btn btn-success" %>
                        <%= link_to "Delete", admin_history_church_path(history_church), method: :delete, class: "btn btn-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<section class="section-btn-group">
  <div class="section-btn-group-wrap">
    <%= link_to "Create", new_admin_history_church_path, class: "btn btn-info" %>
  </div>
</section>
