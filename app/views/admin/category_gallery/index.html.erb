<%= render "admin/shared/bread_crumb", name: {title: "Category gallery", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage category gallery</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Display</th>
                  <th>Number of images</th>
                  <th>Created at</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @category_galleries.each do |category_gallery| %>
                  <tr>
                    <td><%= link_to category_gallery&.name, category_gallery&.name_link %></td>
                    <td><%= category_gallery&.display ? "Yes" : "No"  %></td>
                    <td></td>
                    <td><%= category_gallery&.created_at || "-"  %></td>
                    <td>
                      <% unless category_gallery.blank? %>
                        <%= link_to "Show", admin_category_gallery_path(category_gallery), class: "btn btn-primary" %>
                        <%= link_to "Edit", edit_admin_category_gallery_path(category_gallery), class: "btn btn-success" %>
                        <%= link_to "Delete", admin_category_gallery_path(category_gallery), method: :delete, class: "btn btn-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<section class="section-btn-group">
  <div class="section-btn-group-wrap">
    <%= link_to "Create", new_admin_category_gallery_path, class: "btn btn-info" %>
  </div>
</section>
