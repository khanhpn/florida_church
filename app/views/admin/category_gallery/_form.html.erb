<div class="row">
  <!-- right column -->
  <div class="col-md-12">
    <!-- Form Element sizes -->
    <!-- /.card -->
    <!-- general form elements disabled -->
    <div class="card card-success">
      <div class="card-header">
        <h3 class="card-title"><%= title_name %></h3>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <div class="row">
          <div class="col-sm-12">
            <!-- text input -->
            <div class="form-group">
              <label>Category name</label>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="offset-sm-12">
            <div class="form-check">
              <%= form.check_box :display, class: "form-check-input" %>
              <label class="form-check-label" for="exampleCheck2">Display</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="offset-sm-12">
            <div class="form-check">
              <%= form.check_box :enable_google_photo, class: "form-check-input", id: "id_enable_google_photo" %>
              <label class="form-check-label" for="exampleCheck3">Enable Google Photo</label>
            </div>
          </div>
        </div>
        <div id="id_photo_google_link" class="<%= item.enable_google_photo ? '' : 'hide-form-photo-link' %>">
          <div class="row">
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>Photo link</label>
                <%= form.text_field :link_google_photo, class: "form-control", placeholder: "Enter photo link", id: "id_google_photo_text_field" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Upload main image</label>
            <div class="input-group">
              <div class="custom-file">
                <%= form.file_field :file_image, class: "custom-file-input", multiple: false, id: "id_google_photo_file_field" %>
                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
              </div>
            </div>
            <% if item.file_image.present? %>
              <div class="img-category-photo-custom">
                <%= cl_image_tag url_for(item.file_image), title: item.name, class: "custom-img" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
  <!--/.col (right) -->
</div>
