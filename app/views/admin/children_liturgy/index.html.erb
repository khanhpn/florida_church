<%= render "admin/shared/bread_crumb", name: {title: "Children Liturgy", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage children liturgy</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Content</th>
                  <th>Display</th>
                  <th>Display Order</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @children_liturgies.each do |children_liturgy| %>
                  <tr>
                    <td><%= children_liturgy&.name || "-" %></td>
                    <td><%= children_liturgy&.content&.html_safe || "-"  %></td>
                    <td><%= children_liturgy&.display || "-"  %></td>
                    <td><%= children_liturgy&.display_order || "-"  %></td>
                    <td><%= children_liturgy&.created_at || "-"  %></td>
                    <td><%= children_liturgy&.updated_at || "-"  %></td>
                    <td>
                      <% unless children_liturgy.blank? %>
                        <%= link_to "Edit", edit_admin_children_liturgy_path(children_liturgy), class: "btn btn-success" %>
                        <%= link_to "Delete", admin_children_liturgy_path(children_liturgy), method: :delete, class: "btn btn-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>

<section class="section-btn-group">
  <div class="section-btn-group-wrap">
    <%= link_to "Create", new_admin_children_liturgy_path, class: "btn btn-info" %>
  </div>
</section>
