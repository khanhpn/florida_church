<%= render "admin/shared/bread_crumb", name: {title: "User", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- /.col -->
      <!-- /.tab-pane -->
      <!-- /.tab-pane -->
      <%= form_with scope: :user, url: admin_users_path, class: "form-horizontal wrap-edit-user" do |form| %>
        <div class="form-group row">
          <label for="inputName" class="col-sm-1 col-form-label">Logo icon</label>
          <div class="col-sm-10">
            <%= form.file_field :logo_icon, class: "custom-file-input" %>
            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputName" class="col-sm-1 col-form-label">First name</label>
          <div class="col-sm-10">
            <%= form.text_field :first_name, class: "form-control", placeholder: "Input first name" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputEmail" class="col-sm-1 col-form-label">Last name</label>
          <div class="col-sm-10">
            <%= form.text_field :last_name, class: "form-control", placeholder: "Input last name" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputName2" class="col-sm-1 col-form-label">Email</label>
          <div class="col-sm-10">
            <%= form.text_field :email, class: "form-control", placeholder: "Input email" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputName2" class="col-sm-1 col-form-label">Address</label>
          <div class="col-sm-10">
            <%= form.text_field :address, class: "form-control", placeholder: "Input address" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputName2" class="col-sm-1 col-form-label">Password</label>
          <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Input password" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputName2" class="col-sm-1 col-form-label">Password confirmation</label>
          <div class="col-sm-10">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Input password confirmation" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputExperience" class="col-sm-1 col-form-label">Sex</label>
          <div class="col-sm-10">
            <select class="form-control select2" style="width: 100%;">
              <option selected="selected">Female</option>
              <option>Male</option>
              <option>Female</option>
            </select>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputSkills" class="col-sm-1 col-form-label">Skills</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputSkills" placeholder="Skills">
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-1 col-sm-10">
            <%= form.submit "Submit", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container-fluid -->
</section>
<!-- /.content -->
