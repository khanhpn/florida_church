<%= render "admin/shared/bread_crumb", name: {title: "Clergy", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage clergy</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Display</th>
                  <th>Main article</th>
                  <th>Created at</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @clergies.each do |clergy| %>
                  <tr>
                    <td><%= link_to clergy&.name, clergy&.name_link %></td>
                    <td><%= clergy&.display ? "Yes" : "No"  %></td>
                    <td><%= clergy&.is_main_article ? "Yes" : "No"  %></td>
                    <td><%= clergy&.created_at || "-"  %></td>
                    <td>
                      <% unless clergy.blank? %>
                        <%= link_to "Show", admin_clergy_path(clergy), class: "btn btn-primary" %>
                        <%= link_to "Edit", edit_admin_clergy_path(clergy), class: "btn btn-success" %>
                        <%= link_to "Delete", admin_clergy_path(clergy), method: :delete, data: {confirm: "Are your sure ?"}, class: "btn btn-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<section class="section-btn-group">
  <div class="section-btn-group-wrap">
    <%= link_to "Create", new_admin_clergy_path, class: "btn btn-info" %>
  </div>
</section>
