<%= render "admin/shared/bread_crumb", name: {title: "Welcome", bread_crumb: "Top"} %>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage welcome</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Content</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @welcome&.name || "-" %></td>
                  <td><%= @welcome&.content&.html_safe || "-"  %></td>
                  <td><%= @welcome&.created_at || "-"  %></td>
                  <td><%= @welcome&.updated_at || "-"  %></td>
                  <td>
                    <% unless @welcome.blank? %>
                      <%= link_to "Edit", edit_admin_welcome_path(@welcome), class: "btn btn-success" %>
                      <%= link_to "Delete", admin_welcome_path(@welcome), method: :delete, class: "btn btn-danger" %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<section class="section-btn-group">
  <div class="section-btn-group-wrap">
    <%= link_to "Create", new_admin_welcome_path, class: "btn btn-info" if @welcome.blank? %>
  </div>
</section>
